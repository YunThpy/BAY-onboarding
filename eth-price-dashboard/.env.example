# === 1inch API ===
# 1inch Developer Portal에서 발급받은 API Key (없으면 swap 기능 안됨)
ONEINCH_API_KEY=your_1inch_api_key

# === Hyperliquid ===
# Hyperliquid용 HLBuyer 컨트랙트 주소 (배포 전이면 0x0000… 입력 가능)
NEXT_PUBLIC_HL_BUYER_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MODE=TESTNET


NEXT_PUBLIC_PROJECT_ID=여기에_발급받은_ProjectID
# === 안전 제한치 (돈 튀는거 방지) ===
# 1inch 스왑에서 최대 허용 USD (예: 100달러)
NEXT_PUBLIC_MAX_SWAP_USD=100
# 입금 ETH 최대치 (예: 0.01 ETH)
NEXT_PUBLIC_MAX_DEPOSIT_ETH=0.01
# 입금 USDC 최대치 (예: 50 USDC)
NEXT_PUBLIC_MAX_DEPOSIT_USDC=50
# 서버사이드 제한 (백엔드 API 레이어용)
MAX_SWAP_USD=100
# 슬리피지 설정 (기본 0.5% → 50bps)
ONEINCH_SLIPPAGE_BPS=50
